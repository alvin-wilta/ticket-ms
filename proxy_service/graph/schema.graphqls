# ANCHOR: Get tickets
type Ticket {
  id: Int
  title: String!
  description: String
  Status: String
  Name: String!
}

# ANCHOR: Create Ticket
input NewTicket {
  title: String!
  description: String!
  name: String!
}

type CreateTicketResponse {
  success: Boolean!
}

# ANCHOR: Update Ticket
input UpdateTicket {
  id: Int!
  status: String!
}

type UpdateTicketResponse {
  id: Int!
  success: Boolean!
}

# ANCHOR: Delete ticket
input DeleteTicket {
  id: Int!
}

type DeleteTicketResponse {
  id: Int!
  success: Boolean!
}

# ANCHOR: Queries and Mutations
type Query {
  healthCheck: String!
  tickets: [Ticket!]!
}

type Mutation {
  createTicket(input: NewTicket!): CreateTicketResponse!
  updateTicket(input: UpdateTicket!): UpdateTicketResponse!
  deleteTicket(input: DeleteTicket!): DeleteTicketResponse!
}
